<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vote</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans p-6"
      style="background-image: url('/components/images/vote7.jpg'); 
             background-size: cover; 
             background-position: center; 
             background-repeat: no-repeat;">

  <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold text-center text-blue-700 mb-6">Cast Your Vote</h1>

    <% if (message) { %>
      <p class="text-green-600 text-center mb-4"><%= message %></p>
    <% } %>

    <form method="POST">
      <% elections.forEach(election => { %>
        <h2 class="text-2xl font-bold text-blue-700 mt-6"><%= election.name %></h2>

        <% Object.keys(election.positions).forEach(position => { %>
          <div class="border p-4 rounded my-4 bg-gray-50">
            <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= position %></h3>

            <% election.positions[position].forEach(candidate => { %>
              <label class="block mb-1">
                <input type="radio" 
                       name="candidate_<%= election.id %>_<%= candidate.position_id %>" 
                       value="<%= candidate.id %>" 
                       required>
                <%= candidate.name %> (<%= candidate.party_name %>)
              </label>
            <% }) %>
          </div>
        <% }) %>
      <% }) %>

      <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded mt-4 w-full">Submit Vote</button>
    </form>

    <div class="text-center mt-6">
        <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition">
          Back to Home
        </a>
      </div>
      
  </div>
</body>
</html>
