<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vote</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans p-6"
      style="background-image: url('/components/images/vote5.jpg'); 
             background-size: cover; 
             background-position: center; 
             background-repeat: no-repeat;">

  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-2xl font-bold text-center text-blue-700 mb-6">Cast Your Vote</h1>

    <% if (typeof message !== "undefined") { %>
      <p class="text-green-600 text-center mb-4"><%= message %></p>
    <% } %>

    <form method="POST" action="/vote">
      <div class="space-y-6">
        <% elections.forEach(election => { %>
          <div class="border rounded p-4">
            <h2 class="text-xl font-semibold mb-4"><%= election.name %></h2>
            <% election.candidates.forEach(candidate => { %>
              <div>
                <label>
                  <input type="radio" name="candidate_<%= election.id %>" value="<%= candidate.id %>" required>
                  <%= candidate.name %> (<%= candidate.party_name %>)
                </label>
              </div>
            <% }) %>
          </div>
        <% }) %>
      </div>

      <div class="mt-6 text-center">
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">Submit Vote</button>
      </div>
    </form>
  </div>
</body>
</html>
