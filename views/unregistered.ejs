<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Unregistered Voters</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="min-h-screen bg-gray-50 font-sans flex flex-col items-center p-6">

  <!-- Header -->
  <header class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800">Unregistered Voters</h1>
    <p class="text-gray-500 mt-2 text-lg">Overview of voter registration status by gender</p>
  </header>

  <!-- Stats Cards (two only) -->
  <div class="flex gap-6 mb-10">
    <% stats.forEach(stat => { %>
        <div class="bg-gradient-to-r from-blue-400 to-blue-600 text-white rounded-xl shadow-lg p-6 flex flex-col items-center">
        <span class="text-2xl font-semibold text-white-700"><%= stat.gender %></span>
        <span class="mt-3 text-4xl font-bold text-white-900">Total: <%= stat.total %></span>
        <span class="mt-1 text-xl text-black-600">Not Registered: <%= stat.not_registered %></span>
        <span class="mt-1 text-lg text-black-600">(<%= Number(stat.percent_not_registered).toFixed(2) %>%)</span>
      </div>
    <% }) %>
  </div>

  <!-- Chart Card -->
  <div class="w-full max-w-2xl bg-white/90 backdrop-blur-sm rounded-xl shadow-lg p-6 mb-6">
    <canvas id="unregisteredChart"></canvas>
  </div>

  <!-- Chart JS -->
  <script>
    const ctx = document.getElementById("unregisteredChart").getContext("2d");
    new Chart(ctx, {
      type: "bar",
      data: {
        labels: <%- JSON.stringify(stats.map(s => s.gender)) %>,
        datasets: [{
          label: "% Not Registered",
          data: <%- JSON.stringify(stats.map(s => Number(s.percent_not_registered).toFixed(2))) %>,
          backgroundColor: ["#60a5fa", "#f472b6"]
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: function(context) { return context.raw + "%"; }
            }
          },
          title: {
            display: true,
            text: "Voter Registration Status by Gender",
            font: { size: 20 },
            padding: { top: 10, bottom: 20 }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            title: { display: true, text: "% Not Registered" }
          },
          x: {
            title: { display: true, text: "Gender" }
          }
        }
      }
    });
  </script>

  <div class="text-center mt-6">
    <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition">
      Back to Home
    </a>
  </div>

</body>
</html>
