<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Voting System Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen font-sans flex flex-col"
      style="background-image: url('/components/images/vote3.jpg'); 
             background-size: cover; 
             background-position: center; 
             background-repeat: no-repeat;">

  <!-- Overlay for readability -->
  

    <!-- Navbar -->
    <nav class="bg-blue-700 text-white shadow-lg">
      <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="text-xl font-bold">Voting System</div>
        <img src="/components/images/mec.jpg" alt="Logo" class="w-8 h-8 rounded-full">
        <ul class="flex gap-4 items-center">
          <li>
            <form action="/logout" method="POST" class="inline">
              <button type="submit" class="bg-red-600 px-4 py-1 rounded hover:bg-red-700 transition">
                Logout
              </button>
            </form>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container mx-auto px-6 mt-12 text-center flex-1">
      <h1 class="text-4xl font-bold text-blue-700 mb-4">
        Welcome, <%= currentUser.name ? currentUser.name.split(' ')[0] : currentUser.username %>!
      </h1>
      <p class="text-gray-700 mb-8">Quick access to your available actions:</p>

      <!-- Quick Action Buttons -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-center">
        <% if (currentUser.role === 'admin') { %>
          <a href="/entities" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            Manage Entities
          </a>
          <a href="/votes" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            Manage Votes
          </a>
          <a href="/elections/winners" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            View Winners
          </a>
          <a href="/unregistered" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            Unregistered Voters
          </a>
          <a href="/unCandidate" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            Unregistered Candidates
          </a>
          <a href="/voteStats" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            Vote Statistics
          </a>
          <a href="/voidVotes" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            View Void Votes
          </a>
          <a href="/ageGroups" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            View Age Groups
          </a>
          <a href="/candidates" class="px-6 py-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition shadow-md">
            View Candidate Details
          </a>
        <% } %>

        <% if (currentUser.role === 'clerk') { %>
          <a href="/register" class="px-6 py-4 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 transition shadow-md">
            Register Voter
          </a>
        <% } %>

        <% if (currentUser.role === 'voter') { %>
          <a href="/vote" class="px-6 py-4 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600 transition shadow-md">
            Vote
          </a>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
